// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug API", // Nome atualizado para clareza
      "skipFiles": [
        "<node_internals>/**"
      ],
      // ======================= INÍCIO DA CORREÇÃO =======================
      "cwd": "${workspaceFolder}/api", // Caminho corrigido de 'backend' para 'api'
      "program": "${workspaceFolder}/api/src/server.ts", // Caminho corrigido
      // ======================= FIM DA CORREÇÃO =======================
      "runtimeArgs": [
        "--require", "ts-node/register",
        "--require", "dotenv/config"
      ],
      "env": {
        // Caminho corrigido para o arquivo de ambiente
        "DOTENV_CONFIG_PATH": "${workspaceFolder}/api/.env.development"
      },
      "outFiles": [
        "${workspaceFolder}/api/dist/**/*.js" // Caminho corrigido
      ],
      "sourceMaps": true
    }
  ]
}
