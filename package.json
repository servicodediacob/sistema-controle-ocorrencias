{
  "name": "sistema-ocorrencias-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo para o Sistema de Controle de OcorrÃªncias",
  "author": "Alexandre",
  "license": "ISC",
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "frontend",
    "api"
  ],
  "scripts": {
    "dev": "concurrently -n backend,frontend -c yellow,cyan \"npm run dev:3002 --workspace=api\" \"npm run dev:5174 --workspace=frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=api",
    "build:frontend": "npm run build --workspace=frontend",
    "test:frontend": "npm test --workspace=frontend",
    "test:e2e": "npm run test:e2e --workspace=frontend",
    "e2e": "start-server-and-test \"npm:dev:backend\" http://localhost:3001 \"npm run test:e2e --workspace=frontend\""
  },
  "overrides": {
    "vite": "^5.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "concurrently": "^9.0.1",
    "dotenv-cli": "^10.0.0",
    "execa": "^7.2.0",
    "start-server-and-test": "^2.0.5"
  }
}
