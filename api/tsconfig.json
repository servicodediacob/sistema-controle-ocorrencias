// api/tsconfig.json
{
  "compilerOptions": {
    /* Opções do Compilador */
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,

    /* Checagem de Tipo Estrita */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": [
    "src/**/*" // Este caminho relativo está correto
  ],
  "exclude": [
    "node_modules"
  ]
}
