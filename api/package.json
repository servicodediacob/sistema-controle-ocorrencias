{
  "name": "sistema-ocorrencias-backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc && tsc-alias && node scripts/copy-files.js",
    "start": "node dist/server.js",
    "test": "jest",
    "test:integration": "cross-env NODE_ENV=test jest --config jest.config.js --runInBand --detectOpenHandles",
    "migrate": "node dist/scripts/migrate.js",
    "build:prod": "npm install && npm run build && npm run migrate",
    "seed:dev": "dotenv -e .env.development -- ts-node src/scripts/seed-dev.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.5",
    "pino": "^9.2.0",
    "socket.io": "^4.8.1",
    "tsc-alias": "^1.8.10"
  },
  "devDependencies": {
    "@swc/core": "^1.7.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.12",
    "@types/pg": "^8.11.6",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "pino-pretty": "^11.2.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  }
}
